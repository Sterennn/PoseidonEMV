<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    card:cardBackgroundColor="#E6E6E6"
    card:cardCornerRadius="8dp"
    card:cardElevation="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credit Card Details"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Number : "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_expr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expiration Date : "
        android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_editInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_card_info"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_showQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_qr_code"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>